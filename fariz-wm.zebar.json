{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.7.0/resources/widget-schema.json",
  "htmlPath": "./fariz-wm.html",
  "zOrder": "normal",
  "shownInTaskbar": false,
  "focused": true,
  "resizable": false,
  "transparent": true,
  "caching": {
    "defaultDuration": 60,
    "rules": []
  },
  "presets": [
    {
      "name": "default",
      "anchor": "top_left",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "40px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": false,
        "edge": null,
        "windowMargin": "0px"
      }
    }
  ]
}
